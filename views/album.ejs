<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container">
            <div class="row mt-4">
                <div class="col">
                    <a href="/albums" class="mt-4">
                        &lt; Retour
                    </a>
                    <h1 class="mb-4">
                        <h1>
                            <%= album.title %>
                        </h1>
                    </h1>
                </div>
            </div>
            <div class="row mb-4">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Ajouter une image
                        </h5>
                        <form action="/albums/<%= album._id %>" method="POST" class="form-inline"
                            enctype="multipart/form-data">
                            <input type="file" name="image" class="form-control-file">
                            <button type="submit" class="btn btn-primary mt-3">Ajouter</button>


                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/scripts') %>

</body>

</html>